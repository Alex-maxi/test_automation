{
  "name": "automation_js",
  "version": "1.0.0",
  "description": "Automation framework for API and UI testing",
  "main": "app.js",
  "type": "commonjs",
  "author": "Alex Sokolov",
  "license": "ISC",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "postinstall": "npx playwright install --with-deps",
    "report:clean": "rm -rf reports/*",
    "report:merge": "npx mochawesome-merge reports/api/*.json > reports/api/merged-report.json",
    "report:generate": "npx marge reports/api/merged-report.json -f api-report -o reports/html",
    "test:api": "mocha tests/api --recursive --reporter mochawesome --reporter-options reportDir=reports/api,reportFilename=api-report,quiet=true",
    "test:ui": "npx playwright test --reporter=line,html",
    "report:ui": "npx playwright show-report",
    "report:api": "marge reports/api/api-report.json -f api-report -o reports/api/html",
    "test:all": "npm run report:clean && npm run test:api && npm run report:merge && npm run report:generate && npm run test:ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "dotenv": "^16.5.0",
    "playwright": "^1.51.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "allure-playwright": "^3.2.1",
    "chai": "^4.3.7",
    "chai-colors": "^1.0.1",
    "eslint": "^9.30.0",
    "globals": "^16.2.0",
    "marge": "^1.0.1",
    "mocha": "^10.2.0",
    "mocha-allure-reporter": "^1.4.0",
    "mocha-multi-reporters": "^1.1.7",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.4.1",
    "mochawesome-report-generator": "^6.2.0"
  }
}
